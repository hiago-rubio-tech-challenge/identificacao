{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.json",
    "src/**/*.ts",
    "src/web/schemas/checkoutSchema.ts",
    "tests/**/*"
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}
